---
import { ProductList } from "../components/product-list";
import { db, productsSchema } from "../schema";

const products = db.select().from(productsSchema).all();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>

		<script
			src="https://unpkg.com/htmx.org@1.9.2"
			integrity="sha384-L6OqL9pRWyyFU3+/bjdSri+iIphTN/bvYyM37tICVyOJkWZLpP2vGn6VUEXgzg6h"
			crossorigin="anonymous"></script>
	</head>
	<body class="min-h-screen grid place-items-center bg-gray-50">
		<div class="space-y-8">
			<h1 class="text-2xl font-bold">Astro HTMX</h1>

			<div class="grid grid-cols-2 items-start gap-x-12">
				<ProductList products={products} />

				<form
					id="new-product-form"
					hx-post="/api/new-product"
					hx-trigger="submit"
					hx-swap="outerHTML"
					hx-target="#product-list"
					class="grid gap-y-6 grid-cols-1"
				>
					<label class="grid gap-1">
						<div>Name</div>
						<div class="relative">
							<input type="text" name="name" required
								class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
								placeholder="Product name"
							/>
						</div>
					</label>

					<label class="grid gap-1">
						<div>Price</div>
						<div class="relative">
							<input type="number" name="price" required
								class="w-full border border-gray-300 rounded-md pl-8 pr-3 py-2 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
								step="0.01"
							/>
							<span class="pointer-events-none absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400">
								$
							</span>
						</div>
					</label>

					<button type="submit"
						class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
					>
						Add
					</button>

					<div id="loading" hx-indicator class="hidden">Loading...</div>
				</form>

				<script is:inline>
						document.body.addEventListener('htmx:afterSwap', function(evt) {
							const form = document.querySelector("#new-product-form");
							form.reset();
						});
				</script>
			</div>

		</div>
	</body>
</html>
